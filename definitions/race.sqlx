    heichi_shogai_kubun: "平地･障害 区分",
    heichi_shogai_kubun_label: "heichi_shogai_kubunをもとに対応 平地/障害",
    track_code1_dirtsiba: "トラックコード ダ･芝",
    track_code1_dirtsiba_label: "track_code1をもとに対応 ダ/芝",
    track_code2_LRS: "トラックコード 右･左",
